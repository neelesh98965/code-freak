#include<iostream>
using namespace std;

class complex{
    int a,b;
    public:
    complex(int x,int y){
        a=x;
        b=y;
    }
    complex(int x){
        a = x;
        b = 0;
    }
    complex(){
        a=0;
        b=0;
    }
    void display(){
        cout<<a<<" + "<<b<<"i"<<endl;
    }
};

int main()
{
    complex c1(1,2);
    c1.display();

    complex c2(4);
    c2.display();

    complex c3;
    c3.display();    
    return 0;
}
